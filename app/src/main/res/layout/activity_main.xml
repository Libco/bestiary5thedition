<?xml version="1.0" encoding="utf-8"?><!DOCTYPE RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.libco.bestiaryfive.MainActivity"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <Spinner
            android:id="@+id/spinner_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </android.support.v7.widget.Toolbar>


    <TextView
        android:text="@string/info_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewInfo"
        android:layout_below="@+id/toolbar"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="gone"
        android:textSize="18sp"
        android:textAlignment="center" />

    <android.support.v4.widget.NestedScrollView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_scroll_view"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewName"
                    android:textAllCaps="true"
                    android:textSize="24sp"
                    android:textColor="@color/textBigRed" />

                <TextView
                    android:text="type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:id="@+id/textViewType" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/textBigRed"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Armor Class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLabelAC"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:paddingRight="4dp"
                        android:textColor="@color/textBigRed" />

                    <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewAC"
                        android:layout_weight="1"
                        android:textColor="@color/textBigRed" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Hit Points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLabelHP"
                        android:textStyle="normal|bold"
                        android:paddingRight="4dp"
                        android:textColor="@color/textBigRed" />

                    <TextView
                        android:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewHP"
                        android:textColor="@color/textBigRed" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLabelSpeed"
                        android:textStyle="normal|bold"
                        android:paddingRight="4dp"
                        android:textColor="@color/textBigRed" />

                    <TextView
                        android:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewSpeed"
                        android:textColor="@color/textBigRed" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/textBigRed"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:text="STR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewLabelSTR"
                            android:textStyle="normal|bold"
                            android:paddingRight="4dp"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                        <TextView
                            android:text="0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewSTR"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:text="DEX"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewLabelDEX"
                            android:textStyle="normal|bold"
                            android:paddingRight="4dp"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                        <TextView
                            android:text="0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewDEX"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:text="CON"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewLabelCON"
                            android:textStyle="normal|bold"
                            android:paddingRight="4dp"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                        <TextView
                            android:text="0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewCON"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:text="INT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewLabelINT"
                            android:textStyle="normal|bold"
                            android:paddingRight="4dp"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                        <TextView
                            android:text="0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewINT"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:text="WIS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewLabelWIS"
                            android:textStyle="normal|bold"
                            android:paddingRight="4dp"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                        <TextView
                            android:text="0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewWIS"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:text="CHA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewLabelCHA"
                            android:textStyle="normal|bold"
                            android:paddingRight="4dp"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                        <TextView
                            android:text="0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewCHA"
                            android:textColor="@color/textBigRed"
                            android:textAlignment="center" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/textBigRed"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewFeatures"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/textBigRed"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewFeats"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewLabelActions"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textColor="@color/textBigRed"
                    android:paddingTop="8dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/textBigRed"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewActions"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>


                <LinearLayout
                    android:id="@+id/linearViewLegendary"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Legendary Actions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLabelLegendaryActions"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textColor="@color/textBigRed"
                        android:paddingTop="8dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/textBigRed"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewLegendaryActions"
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>




</RelativeLayout>
